    <script>
        // Progress tracking
        const form = document.getElementById('assessment-form');
        const progressBar = document.getElementById('progress-bar');
        const progressPercent = document.getElementById('progress-percent');
        const totalFields = form.querySelectorAll('select, textarea').length;

        function updateProgress() {
            const filledFields = Array.from(form.querySelectorAll('select, textarea'))
                .filter(field => field.value !== '').length;
            const percentage = Math.round((filledFields / totalFields) * 100);
            
            progressBar.style.width = percentage + '%';
            progressPercent.textContent = percentage + '%';
        }

        // Add event listeners to all inputs
        form.querySelectorAll('select, textarea').forEach(field => {
            field.addEventListener('change', updateProgress);
            field.addEventListener('input', updateProgress);
        });

        // Smooth scroll to next section after answering
        form.querySelectorAll('select').forEach(select => {
            select.addEventListener('change', function() {
                // Optional: Auto-scroll to next unanswered question
                const unanswered = Array.from(form.querySelectorAll('select, textarea'))
                    .find(field => field.value === '');
                if (unanswered && this.value !== '') {
                    setTimeout(() => {
                        unanswered.scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });
                    }, 300);
                }
            });
        });
    </script>
